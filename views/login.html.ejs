<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="alert-error">
        <div class="alert alert-danger" ng-if="empty">
        <strong ng-bind="empty"></strong>
      </div>
      <div class="loginForm">
        <h2>Chat Login</h2>
        <form>
          <div class="form-group">
            <input type="email" name="email" ng-model="email" class="form-control" placeholder="Email" />
          </div>
          <div class="form-group">
            <button class="btn btn-success" id="login-btn" ng-click="login()">Login</button>
          </div>
        </form>
        <div class="new-user">
          <span class="new-user-text">New User? <a ng-click="goToSignup()" class="btn btn-info">Signup</a></span>
        </div>
      </div>
    </div>
  </div><!-- row end -->
</div><!-- container end -->